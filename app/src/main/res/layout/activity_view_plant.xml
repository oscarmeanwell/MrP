<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_plant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#0CFF97"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oscarmeanwell.mrplantfin.ViewPlant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:id="@+id/headertxt1"
            android:textSize="25dp"
            android:paddingTop="10dp"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:paddingTop="5dp">

    <TextView
        android:text="Temperature:"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="34dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:id="@+id/txtTemp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="Humidity:"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:id="@+id/txtHum"

        android:layout_below="@+id/txtTemp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Soil Humidity:"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:id="@+id/txtSoil"

        android:layout_below="@+id/txtHum"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastUpdated"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:text="Hello"
            android:gravity="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/btn"
            android:text="Refresh"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnHelp"
            android:layout_alignEnd="@id/lastUpdated"
            android:text="\?"/>
    </RelativeLayout>


</RelativeLayout>
